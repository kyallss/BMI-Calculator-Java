<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="org.example.bmi.BMICalculatorController"
          xmlns:fx="http://javafx.com/fxml/1"
          alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <MenuBar GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="Exit" onAction="#handleExit"/>
                    <MenuItem text="Clear" onAction="#handleClear"/>
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="About" onAction="#handleAbout"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <Label text="Weight:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="weightField" promptText="Enter weight" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Height:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="heightField" promptText="Enter height" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Unit:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox fx:id="unitComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="Calculate BMI" onAction="#handleCalculate" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"/>

    <Label fx:id="resultLabel" text="Your BMI will be shown here" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>

</GridPane>
